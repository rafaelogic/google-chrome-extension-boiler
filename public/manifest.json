{
    "manifest_version": 3,
    "name": "Project Name",
    "version": "1.0",
    "description": "Project description.",
    "author": "Rafael S. Rafael",
    "permissions": ["storage", "tabs"],
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["index.html", "fonts/*.woff"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  